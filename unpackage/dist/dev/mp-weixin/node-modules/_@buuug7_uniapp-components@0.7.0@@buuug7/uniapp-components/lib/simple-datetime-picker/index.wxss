.datetime-picker {
  position: relative;
  z-index: 999;
}
.datetime-picker picker-view {
    height: 100%;
}
.datetime-picker .mask {
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.6);
    visibility: hidden;
    opacity: 0;
    -webkit-transition: all 0.3s ease;
    transition: all 0.3s ease;
}
.datetime-picker .mask.show {
      visibility: visible;
      opacity: 1;
}
.datetime-picker .wrap {
    z-index: 1001;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    -webkit-transition: all 0.3s ease;
    transition: all 0.3s ease;
    -webkit-transform: translateY(100%);
            transform: translateY(100%);
}
.datetime-picker .wrap.show {
      -webkit-transform: translateY(0);
              transform: translateY(0);
}
.datetime-picker .picker-header {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
    -webkit-flex-direction: row;
            flex-direction: row;
    -webkit-box-pack: justify;
    -webkit-justify-content: space-between;
            justify-content: space-between;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    padding: 8px 8px;
    background-color: #fafafa;
    background-color: #fff;
}
.datetime-picker .picker-body {
    width: 100%;
    height: 420rpx;
    overflow: hidden;
    background-color: #fff;
}
.datetime-picker .column-item {
    text-overflow: ellipsis;
    white-space: nowrap;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.datetime-picker .btn-picker {
    position: relative;
    display: inline-block;
    padding-left: 10px;
    padding-right: 10px;
    box-sizing: border-box;
    text-align: center;
    text-decoration: none;
    line-height: 2;
    -webkit-tap-highlight-color: transparent;
    overflow: hidden;
    background-color: #f8f8f8;
    font-size: 14px;
    border-radius: 2px;
    color: #488ee9;
}
.datetime-picker .btn-picker.submit {
    background-color: #488ee9;
    color: #fff;
}

